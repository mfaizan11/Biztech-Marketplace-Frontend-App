                <>
                  <div className="py-2 border-t border-gray-100">
                    <p className="text-sm mb-1" style={{ color: 'var(--color-text)' }}>{user?.name || 'User'}</p>
                    <p className="text-xs" style={{ color: '#9CA3AF' }}>{getRoleLabel(user?.role)}</p>
